


<ul class='postList'>
    <li class="postItem">
      <div class="postItemDiv orderly">
        <h1>{{post.title}}</h1>
        <h3>{{post.subtitle}}</h3>
        <h4>{{post.author_id}}</h4>
        <p class="post-body">
          {{{post.body}}}
        </p>
      </div>
      <p class="comment-body">
        {{#each data}}
        <div class="aComment" id="{{this.commentId}}">{{{this.commentBody}}}</div>
        {{/each}}
      </p>
      <p class="comment-form">
        {{{commentForm}}}
      </p>

    </li>
</ul>
